<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<servlet>
		<servlet-name>GetReadabilityScore</servlet-name>
		<servlet-class>com.ipeirotis.readability.GetReadabilityScoresServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CheckForAds</servlet-name>
		<servlet-class>com.ipeirotis.ads.CheckForAdsServlet</servlet-class>
	</servlet>
	<servlet>
	<servlet-name>Readability REST Application</servlet-name>
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>com.sun.jersey.config.property.packages</param-name>
			<param-value>com.ipeirotis.rest.readability</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
	        <servlet-name>Readability REST Application</servlet-name>
	        <url-pattern>/readability/rest/*</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
		<servlet-name>GetReadabilityScore</servlet-name>
		<url-pattern>/readability/GetReadabilityScores</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CheckForAds</servlet-name>
		<url-pattern>/ads/CheckForAds</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
